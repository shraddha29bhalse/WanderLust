<% layout("/layout/boilerplate.ejs") -%>
    <style>
        .filter{
            margin-left: 1rem;
            padding: 1rem;
            text-align: center;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        
        .filters{
            display: flex;
            flex-wrap: wrap;
            
        }
    </style>

<div class="filters">
    
    <div class="filter"  data-category="trending">
        <i class="fa-solid fa-mountain"></i>
        <p>Trending</p>
    </div>
    <div class="filter"  data-category="beach">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Umbrella</p>
    </div>
    <div class="filter" data-category="trending">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
    </div>
    <div class="filter" data-category="landmark">
        <i class="fa-solid fa-landmark-dome"></i>
        <p>Landmark</p>
    </div>
    <div class="filter" data-category="rooms">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </div>
    <div class="filter" data-category="camping">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
    </div>
    <div class="filter" data-category="castle">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
    </div>
    <div class="filter" data-category="farm">
        <i class="fa-solid fa-cow"></i>
        <p>Farm</p>
    </div>
    <div class="filter" data-category="iconic-city">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic City</p>
    </div>
    <div class="filter" data-category="pools">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
    </div>
    <div class="filter" data-category="desert">
        <i class="fas fa-wind"></i>
        <p>Desert</p>
    </div>

</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        
            
            <% for(let listing of allListing){ %>
                <a href="/listings/<%=listing._id %>" class=listing-link>
                    <div class="card col listing-card">
                        
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listings_image"
                            style="height :20rem" />
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#8377; <%=listing.price.toLocaleString("en-IN")%>
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>
    </div>


